<!DOCTYPE html>   
<html>   
<body>   
 <div class="container">   
    <h3>Locations List</h3>   
     
      <div>   
        <%= link_to 'Add Location', new_location_path, class: "" %>   
      </div>   
      <br>   
    <table border="2" class="table">   
      <thead>   
      <tr>   
        <th>Lattitude</th>   
        <th>Longitude</th>   
        <th>Name</th>   
        <th>Actions</th>   
      </tr>   
      </thead>   
      <tbody>   
      <% @locations.each do |location| %>   
          <tr>   
            <td><%= location.lattitude %></td>   
            <td><%= location.longitude %></td>   
            <td><%= truncate(location.name, :length => 75) %></td>   
               <div>   
               <td>   
                <%= link_to 'Show', location_path(location.slug), class: "btn" %>   
                <%= link_to 'Forecast', location_forecast_path(location.slug), class: "btn" %>   
                <%= link_to 'Edit', edit_location_path(location.slug), class: "btn" %>   
                <%= link_to 'Delete', location_path(location.slug), method: :delete, class: "btn" , data: { confirm: "Are you sure?" }%>   
              </div>   
            </td>   
          </tr>   
      <% end %>   
      </tbody>   
    </table>   
    </div>   
  </body>   
</html>  